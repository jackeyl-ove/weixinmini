/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.box {
  background-color: rgb(240, 240, 240);
  margin-bottom: 20rpx;
  height: 400rpx;
  width: 100%;
  border: 3rpx solid black;
  border-radius: 15rpx;
}


.image {
  float: left;
  height: 100%;
  width: 300rpx;
}

.title {
  float: left;
  margin: 100rpx 0 0 100rpx;
}

.time {
  float: left;
  margin: 20rpx 0 50rpx 90rpx;
}

.button {
  float: left;
  margin-left: 130rpx;
  background-color: red;
}